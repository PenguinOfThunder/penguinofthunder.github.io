<script>
if(navigator.languages.includes("nb")) {
    window.location.href = "{{ "/" | locale_url: "nb" }}";
} else {
    window.location.href = "{{ "/" | locale_url: "en" }}";
}
</script>
<header>
    <h1>Penguin of Thunder</h1>
</header>
<main>
    <ul>
        {% for lang in languages %}
            <li>{{ translation.choose_language[lang] }}: <a href="{{ "/" | locale_url: lang }}" hreflang="{{ lang }}">{{ lang | language_name }}</a></li>
        {% endfor  %}
    </ul>
</main>
